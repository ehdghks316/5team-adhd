<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:background="#ffffff"
               >
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="50dp"
    >
       <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="방만들기"
               android:textSize="70dp"
               android:textAlignment="center"
               android:fontFamily="@font/hoonyunpilsupkyukr"

       />
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="방제목 : "
                android:fontFamily="@font/hoonyunpilsupkyukr"
                android:textSize="40dp"
                />

        <EditText
            android:id="@+id/room_subject"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="인원수 :    "
                android:fontFamily="@font/hoonyunpilsupkyukr"
                android:textSize="40dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="4명 "
                android:fontFamily="@font/hoonyunpilsupkyukr"/>

        <RadioButton
            android:id="@+id/member4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text=" 6명 "
                android:fontFamily="@font/hoonyunpilsupkyukr"/>

        <RadioButton
            android:id="@+id/member6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="난이도 :    "
                    android:fontFamily="@font/hoonyunpilsupkyukr"
                    android:textSize="40dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="상 "
                android:textSize="30dp"
                android:fontFamily="@font/hoonyunpilsupkyukr"/>

        <RadioButton
            android:id="@+id/rd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 중 "
                android:textSize="30dp"
                android:fontFamily="@font/hoonyunpilsupkyukr"/>

        <RadioButton
            android:id="@+id/rd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 하 "
                android:textSize="30dp"
                android:fontFamily="@font/hoonyunpilsupkyukr"/>

        <RadioButton
            android:id="@+id/rd3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >
        <Button
                android:id="@+id/makeroom_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="확인"
                android:background="#ffffff"
                android:textSize="40dp"
                android:fontFamily="@font/hoonyunpilsupkyukr"
        />
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="취소"
                android:textSize="40dp"
                android:fontFamily="@font/hoonyunpilsupkyukr"
        />

    </LinearLayout>



</LinearLayout>